<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".HomeScreen">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/skylineImageView"
        android:foreground="@mipmap/nyc_skyline"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:layout_above="@+id/start_button_nav"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/start_skyline_desc"
        android:padding="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/blackBoxImageView"
        android:layout_below="@+id/skylineImageView"
        android:layout_centerHorizontal="true"
        android:foreground="@mipmap/black_square" />

    <Button
        style="@style/GeneralText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_button_nav"
        android:id="@+id/start_button_nav"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="0dp"
        android:onClick="onClick"
        />

    <Button
        style="@style/GeneralText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_button_maps"
        android:id="@+id/start_button_maps"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/start_button_nav"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:onClick="onClick"
        />

    <Button
        style="@style/GeneralText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_button_help"
        android:id="@+id/start_button_help"
        android:gravity="center"
        android:layout_below="@+id/start_button_maps"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:onClick="onClick"
        />

    <TextView
        style="@style/WhiteText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/start_text_title"
        android:id="@+id/start_text_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_horizontal"
        android:textSize="50dp"
        android:layout_marginTop="50dp"
        android:onClick="onClick"
        />

</RelativeLayout>
